{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "baseUrl":"src",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ],
    "noImplicitAny": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}
